<h2>You're almost done! Now create a password to securely access your account.</h2>

<%= form_for(resource, :as => resource_name, :url => confirm_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <div style = "width:100px"><%= f.label :password %><br />
  <%= f.password_field :password, :autofocus => true %></div>

  <div style = "width:100px"><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :autofocus => true %></div>

  <%= f.hidden_field :confirmation_token, :as => :hidden %>

  <div style = "width:100px"><%= f.submit "Confirm Account" %></div>
<% end %>

<%= render "devise/shared/links" %>
